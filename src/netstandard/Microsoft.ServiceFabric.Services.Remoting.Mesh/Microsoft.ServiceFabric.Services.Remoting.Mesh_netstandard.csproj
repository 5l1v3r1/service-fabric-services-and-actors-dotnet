<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <Import Project="..\..\..\properties\service_fabric_managed_netstandard.props" />
  <Import Project="..\..\..\properties\service_fabric_managed_stylecop.props" />
  <PropertyGroup>
    <Description>Microsoft.ServiceFabric.Services.Remoting Mesh Library</Description>
    <AssemblyName>Microsoft.ServiceFabric.Services.Remoting.Mesh</AssemblyName>
    <RootNamespace>$(AssemblyName)</RootNamespace>
    <BaseCodeDir>$(RepoRoot)src\Microsoft.ServiceFabric.Services.Remoting\</BaseCodeDir>
	<SourceCodeDir>$(RepoRoot)src\Microsoft.ServiceFabric.Services.Remoting.Mesh\</SourceCodeDir>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>
  <ItemGroup>
    <!--Add required .cs files to build for dotnet core-->
        <!-- Only include V2 stack -->
	<Compile Include="$(BaseCodeDir)Base\**\*.cs" Link="$([System.String]::Copy('%(Identity)').Replace('$(BaseCodeDir)',''))" />
	<Compile Include="$(SourceCodeDir)Mesh\**\*.cs"  Link="$([System.String]::Copy('%(Identity)').Replace('$(SourceCodeDir)',''))" />
  </ItemGroup>
      <ItemGroup>
    <Compile Include="$(SourceCodeDir)\SR.Designer.cs">
      <Link>SR.Designer.cs</Link>
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>SR.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.ServiceFabric.FabricTransport.Internal" Version="3.3.175" />
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Emit.ILGeneration" Version="4.3.0" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="$(SourceCodeDir)\SR.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>SR.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Microsoft.ServiceFabric.Services\Microsoft.ServiceFabric.Services_netstandard.csproj" />
  </ItemGroup>
</Project>
